<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td>
          <% if movie.tags.any? %>
            <%= movie.tags.pluck(:name).join(', ') %>
          <% else %>
            <span style="color: red;">No posee tags</span>
          <% end %>
        </td>
        <td>
            <%= form_with(url: add_tag_movie_path(movie), local: true) do |f| %>
              <%= f.text_field :name %>
            <% end %>
        </td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

